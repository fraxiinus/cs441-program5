<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="75dp"
            android:layout_height="0dp"
            android:background="@drawable/platborder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/toolbarlayout">
<!--
        <TextView
                android:text="Tool Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
-->

        <ImageButton
                android:id="@+id/pen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:background="@drawable/pen"/>

        <Button
                android:id="@+id/champion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="champ"
                android:background="@drawable/roundcorner"/>

        <Button
                android:id="@+id/ward"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="ward"
                android:background="@drawable/roundcorner"/>

        <ImageButton
                android:id="@+id/play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:drawable="@drawable/play"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/play"
                android:scaleType="fitCenter"
                android:background="@drawable/play"/>

        <ImageButton
                android:id="@+id/pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:drawable="@drawable/pause"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/pause"
                android:scaleType="fitCenter"
                android:background="@drawable/pause"/>

        <ImageButton
                android:id="@+id/restart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:drawable="@drawable/clear"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:background="@drawable/clear"/>



    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="75dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/platborder"
            android:id="@+id/seekbarlayout">
        <TextView
                android:text="Seek Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toStartOf="@+id/seekbarlayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toolbarlayout"
            android:id="@+id/maplayout">
        <TextView
                android:text="Map Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/srfull"
                android:id="@+id/imageView"/>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>